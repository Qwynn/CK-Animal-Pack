<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <RecipeDef>
    <defName>CK_MakeChocolate</defName>
    <label>make chocolate</label>
    <description>Make chocolate from vanilla and cocoa beans.</description>
    <jobString>Making chocolate.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>            
            <li>CK_RawVanilla</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>CK_RawCocoa</li>            
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CK_RawCocoa</li>
        <li>CK_RawVanilla</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Chocolate>1</Chocolate>
    </products>
    <workSkill>Cooking</workSkill>
  </RecipeDef>

</Defs>