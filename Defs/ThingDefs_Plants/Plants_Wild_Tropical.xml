<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--===========================  Wild - clustering bushes (some harvestable) ==============================-->
  <ThingDef ParentName="PlantBase">
    <defName>PlantBushPalm</defName>
    <label>palm</label>
    <description>A short palm.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/BushPalm</texPath>
      <graphicClass>Graphic_Random</graphicClass>
       <shadowData>
         <volume>(0.37, 0.2, 0.37)</volume>
       </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <fillPercent>0.25</fillPercent>
    <pathCost>30</pathCost>
    <ingestible>
      <nutrition>0.17</nutrition>
    </ingestible>
    <plant>
      <!-- <leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath> -->
      <harvestYield>18</harvestYield>
      <harvestWork>800</harvestWork>
      <harvestTag>Wood</harvestTag>      
      <harvestFailable>false</harvestFailable>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <fertilityMin>0.4</fertilityMin>
      <wildClusterSizeRange>
        <min>2</min>
        <max>5</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
      <visualSizeRange>
        <min>0.5</min>
        <max>0.9</max>
      </visualSizeRange>
      <growDays>12</growDays>
      <topWindExposure>0.3</topWindExposure>
      <fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
    </plant>
  </ThingDef>

  <!--======================= Wild plants - carpets ========================-->

  <ThingDef ParentName="PlantBase">
    <defName>PlantFern</defName>
    <label>Fern</label>
    <description>Wild ferns. Significantly slows down anyone moving over it.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Beauty>0</Beauty>
    </statBases>
    <pathCost>18</pathCost>
    <graphicData>
      <texPath>Things/Plant/Fern</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible>
      <nutrition>0.25</nutrition>
    </ingestible>
    <plant>
      <harvestWork>60</harvestWork>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>
        <min>0.7</min>
        <max>0.85</max>
      </visualSizeRange>
      <growDays>3</growDays>
      <topWindExposure>0.4</topWindExposure>
      <seedEmitMTBDays>3.5</seedEmitMTBDays>
      <fertilityFactorGrowthRate>0.90</fertilityFactorGrowthRate>
      <fertilityFactorPlantChance>0.90</fertilityFactorPlantChance>
    </plant>
  </ThingDef>

  <!--============================ Wild - Trees ============================-->

  <ThingDef ParentName="TreeBase">
    <defName>PlantTreePalm</defName>
    <label>palm tree</label>
    <description></description>
    <graphicData>
      <texPath>Things/Plant/TreePalm</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>1</Beauty>
    </statBases>
    <plant>
      <!-- <leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath> -->
      <growDays>18</growDays>
      <harvestWork>1000</harvestWork>
      <harvestYield>32</harvestYield>
      <visualSizeRange>
        <min>1.3</min>
        <max>2.4</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

  <ThingDef ParentName="TreeBase">
    <defName>PlantTreeMahogany</defName>
    <label>mahogany tree</label>
    <description>A strong hardwood tree. Slow-going, but its wood is very strong.</description>
    <graphicData>
      <texPath>Things/Plant/TreeMahogany</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>5</Beauty>
    </statBases>
    <plant>
      <!-- <leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath> -->
      <growDays>34</growDays>
      <harvestWork>1000</harvestWork>
      <harvestYield>50</harvestYield>
    </plant>
  </ThingDef>

</Defs>