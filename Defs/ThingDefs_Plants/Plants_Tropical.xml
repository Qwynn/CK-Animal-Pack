<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--===========================  Wild - clustering bushes (some harvestable) ==============================-->
  <ThingDef ParentName="PlantBase">
    <defName>PlantBushPalm</defName>
    <label>palm</label>
    <description>A short palm.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/BushPalm</texPath>
      <graphicClass>Graphic_Random</graphicClass>
       <shadowData>
         <volume>(0.37, 0.2, 0.37)</volume>
       </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <fillPercent>0.25</fillPercent>
    <pathCost>30</pathCost>
    <ingestible>
      <nutrition>0.17</nutrition>
    </ingestible>
    <plant>
      <!-- <leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath> -->
      <harvestYield>18</harvestYield>
      <harvestWork>800</harvestWork>
      <harvestTag>Wood</harvestTag>      
      <harvestFailable>false</harvestFailable>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <fertilityMin>0.4</fertilityMin>
      <wildClusterSizeRange>
        <min>2</min>
        <max>5</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
      <visualSizeRange>
        <min>0.8</min>
        <max>1.2</max>
      </visualSizeRange>
      <growDays>12</growDays>
      <topWindExposure>0.3</topWindExposure>
      <fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>PlantTaro</defName>
    <label>taro</label>
    <description></description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Taro</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.6, 0.2, 0.6)</volume>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <fillPercent>0.25</fillPercent>
    <pathCost>20</pathCost>
    <ingestible>
      <nutrition>0.25</nutrition>
    </ingestible>
    <plant>
      <!-- <leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath> -->
      <harvestYield>10</harvestYield>      
      <harvestTag>Standard</harvestTag>
      <harvestDestroys>true</harvestDestroys>
      <harvestedThingDef>TaroRoot</harvestedThingDef>
      <fertilityMin>0.2</fertilityMin>
      <wildCommonalityMaxFraction>3.0</wildCommonalityMaxFraction>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <wildClusterSizeRange>
        <min>2</min>
        <max>5</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
      <visualSizeRange>
        <min>0.7</min>
        <max>1.1</max>
      </visualSizeRange>
      <growDays>3</growDays>
      <topWindExposure>0.3</topWindExposure>
      <seedEmitMTBDays>2.5</seedEmitMTBDays>
      <fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
      <fertilityFactorPlantChance>0.90</fertilityFactorPlantChance>
    </plant>
  </ThingDef>

  <!--======================= Wild plants - carpets ========================-->

  <ThingDef ParentName="PlantBase">
    <defName>PlantFern</defName>
    <label>Fern</label>
    <description>Wild ferns. Significantly slows down anyone moving over it.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Beauty>0</Beauty>
    </statBases>
    <pathCost>18</pathCost>
    <graphicData>
      <texPath>Things/Plant/Fern</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible>
      <nutrition>0.25</nutrition>
    </ingestible>
    <plant>
      <harvestWork>60</harvestWork>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>16</maxMeshCount>
      <visualSizeRange>
        <min>0.7</min>
        <max>0.85</max>
      </visualSizeRange>
      <growDays>3</growDays>
      <topWindExposure>0.4</topWindExposure>
      <seedEmitMTBDays>3.5</seedEmitMTBDays>
      <fertilityFactorGrowthRate>0.90</fertilityFactorGrowthRate>
      <fertilityFactorPlantChance>0.90</fertilityFactorPlantChance>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
