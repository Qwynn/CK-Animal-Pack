<?xml version="1.0" encoding="utf-8" ?>
<Smokeleaf>

  <ThingDef ParentName="MakeableDrugBase">
    <defName>TobaccoRoll</defName>
    <label>tobacco roll</label>
    <description>Raw tobacco prepared in small rolls for smoking. Improves mood and also decreases appetite a bit, but reduces focus a bit. Smoking can produce a dependency. Can be produced without equipment, at a crafting spot.</description>
    <graphicData>
      <texPath>Things/Item/Drug/CigRoll</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <MarketValue>10</MarketValue>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <ingestible>
      <foodType>Plant, Processed</foodType>
      <joy>0.40</joy>
      <baseIngestTicks>720</baseIngestTicks>
      <nurseable>true</nurseable>
      <drugCategory>Social</drugCategory>
      <ingestSound>Ingest_Smoke</ingestSound>
      <ingestEffect>Smoke_Joint</ingestEffect>
      <ingestHoldOffsetStanding>(0.27,0,0.08)</ingestHoldOffsetStanding>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Smoke {0}</ingestCommandString>
      <ingestReportString>Smoking {0}.</ingestReportString>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>TobaccoHigh</hediffDef>
          <severity>0.3</severity>
          <toleranceChemical>Tobacco</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>0.1</offset>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>TobaccoTolerance</hediffDef>
          <severity>0.020</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <RawTobacco>8</RawTobacco>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Tobacco</chemical>
        <addictiveness>0.009</addictiveness>
        <minToleranceToAddict>0.20</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.05</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>20</listOrder>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>TobaccoHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>dizzy from cigarettes</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li>
        <compClass>HediffComp_SeverityPerDay</compClass>
        <severityPerDay>-3.0</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <hungerRateFactor>0.9</hungerRateFactor>          
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.1</offset>
            </li>            
          </capMods>
        </li>
      </stages>
  </HediffDef>
  
  <ThoughtDef>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <stages>
      <li>
        <label>smoke a cigarette</label>
        <description>I just had my cig. Feeling good</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Smokeleaf addiction -->

  <ChemicalDef>
    <defName>Tobacco</defName>
    <label>Tobacco</label>
    <addictionHediff>TobaccoAddiction</addictionHediff>
    <toleranceHediff>TobaccoTolerance</toleranceHediff>
  </ChemicalDef>

  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Tobacco</defName>
    <needClass>Need_Chemical</needClass>
    <label>Tobacco</label>
    <description>Because of a developed Tobacco dependence, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>25</listPriority>
  </NeedDef>
  
  <HediffDef ParentName="DrugToleranceBase">
    <defName>TobaccoTolerance</defName>
    <label>Tobacco tolerance</label>
    <comps>
      <li>
        <compClass>HediffComp_SeverityPerDay</compClass>
        <severityPerDay>-0.010</severityPerDay>
      </li>
      <li>
        <compClass>HediffComp_DrugEffectFactor</compClass>
        <chemical>Tobacco</chemical>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="AddictionBase">
    <defName>TobaccoAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>Tobacco dependence</label>
    <causesNeed>Chemical_Tobacco</causesNeed>
    <comps>
      <li>
        <compClass>HediffComp_SeverityPerDay</compClass>
        <severityPerDay>-0.03</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.07</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>TobaccoWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>TobaccoAddiction</hediff>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>Tobacco withdrawal</label>
        <description>I really wish I could smoke.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Smokeleaf>